<div class="row">
	<div class="col-md-10 offset-md-1">
		<form role="form" enctype="multipart/form-data" method="post">
			<div class="form-group">
				<label for="input-title" class="control-label">Заголовок:</label>
				<input type="text" class="form-control" id="input-title" />
			</div>
			<div class="form-group">
				<label for="input-description" class="control-label">Описание:</label>
				<textarea class="form-control" id="input-description"></textarea>
			</div>
			<div class="form-group">
				<label for="input-text" class="control-label">Текст:</label>
				<textarea name="input-text" id="input-text" rows="10" cols="80" class="form-control"></textarea>
			</div>
		</form>
		<button id="save-btn" type="button" data-id="<%= news.id %>" class="btn btn-success">Сохранить</button>
	</div>
</div>

<script src="/linker/ckeditor/ckeditor.js"></script>
<script src="/linker/js/editnews.js"></script>
<script>
	$(function() {
		CKEDITOR.replace('input-text');
		CKEDITOR.instances['input-text'].setData(unescape("<%= news.text %>"));
		$('#input-title').val("<%= news.title %>");
		$('#input-description').val(unescape("<%= news.description %>"));
	});
</script>