<div class="modal" id="news-card" tabindex="-1" role="dialog" aria-labelledby="news-card-label" aria-hidden="true" data="">
	<div class="modal-dialog" style="width: 80%">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title" id="news-card-label">Редактирование</h4>
			</div>
			<div class="modal-body">
				<form role="form" enctype="multipart/form-data" method="post">
					<div class="form-group">
						<label for="input-title" class="control-label">Заголовок:</label>
						<input type="text" class="form-control" id="input-title" />
					</div>
					<div class="form-group">
						<label for="input-description" class="control-label">Описание:</label>
						<textarea class="form-control" id="input-description"></textarea>
					</div>
					<div class="form-group">
						<label for="input-text" class="control-label">Текст:</label>
						<textarea name="input-text" id="input-text" rows="10" cols="80" class="form-control"></textarea>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-success" data-dismiss="modal">Отменить</button>
				<button id="delete-btn" type="button" class="btn btn-success">Удалить</button>
				<button id="save-btn" type="button" class="btn btn-success">Сохранить</button>
			</div>
		</div>
	</div>
</div>