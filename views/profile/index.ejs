<link href="/linker/styles/profile.css" rel="stylesheet">

<div class="row">
	<div class="col-md-8 col-md-offset-2 container content-column">
		<div class="row">
			<div class="col-md-4">
				<% if (user.avatar) { %>
					<img src="<%= user.avatar %>" class="avatar">
				<% } else { %>
					<img src="/images/noavatar.png" class="avatar">
				<% } %>
			</div>
			<div class="col-md-5 container">
				<% include ../user/show %>
				<div class="list-group">
					<% if (user.contacts.length > 0) { %>
						<% user.contacts.forEach(function(contact) { %>
							<li class="list-group-item contact">
								<% include ../contact/show %>
							</li>
						<% }); %>
					<% } %>
				</div>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col-md-10 col-md-offset-1 profile-well">
				<% if (user.education.length > 0) { %>
					<h4><%- Helper.translate(req, 'ejs-profile-education') %></h4>
					<div class="list-group">
						<% user.education.forEach(function(education) { %>
							<li class="list-group-item">
								<% include ../education/show %>
							</li>
						<% }); %>
					</div>
				<% } %>
				<hr>
				<% if (user.work.length > 0) { %>
					<h4><%- Helper.translate(req, 'ejs-profile-work') %></h4>
					<div class="list-group">
						<% user.work.forEach(function(work) { %>
							<li class="list-group-item">
								<% include ../work/show %>
							</li>
						<% }); %>
					</div>
				<% } %>
				<hr>
				<% if (user.publications.length > 0) { %>
					<h4><%- Helper.translate(req, 'ejs-profile-publication') %></h4>
					<div class="list-group">
						<% user.publications.forEach(function(publication) { %>
							<li class="list-group-item">
								<% include ../publication/show %>
							</li>
						<% }); %>
					</div>
				<% } %>
				<hr>
				<h4><%- Helper.translate(req, 'ejs-profile-additionalInfo') %></h4>
				<%- user.additionalInfo %>
			</div>
		</div>
	</div>
</div>