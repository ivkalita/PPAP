<!DOCTYPE html>
<html>
  <head>
    <title>Приморская психологическая ассоциация психологов</title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link href='http://fonts.googleapis.com/css?family=Yeseva+One&amp;subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/bootstrap-theme.css">
    <link rel="stylesheet" href="/styles/bootstrap.css">
    <link rel="stylesheet" href="/styles/custom.css">
    <link rel="stylesheet" href="/styles/importer.css">
    <link rel="stylesheet" href="/styles/loader.css">
    <!--STYLES END-->
    <link rel="stylesheet" href="/linker/styles/bootstrap-select.min.css">
    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/dependencies/jquery-v1.11.2.min.js"></script>
    <script src="/js/alerts.js"></script>
    <script src="/js/bootstrap.js"></script>
    <!--SCRIPTS END-->
    <script src="/linker/js/bootstrap-select.min.js"></script>
    <script src="/linker/js/interface.js"></script>
    <script src="/linker/js/ckeditor-fix.js"></script>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href = "/">Тут логотип</a> 
        </div>
        <div class="navbar-right">
          <% if (req.session.hasOwnProperty('me') && req.session.me.isAdmin) {%>
            <button type="button" class="btn btn-success navbar-btn" id="admin-enter"><a href="/admin">SETTINGS</a></button>
          <% } %>
          <select id="locale-select" class="selectpicker">
            <option 
              <% if (req.session.hasOwnProperty('locale') && req.session.locale == 'en') { %>
                selected
              <% } %>
            value="en">En</option>
            <option
            <% if (!req.session.hasOwnProperty('locale') || req.session.locale == 'ru') { %>
                selected
              <% } %>
            value="ru">Ru</option>
          </select>
          <% if (req.session.hasOwnProperty('me')) { %>
            <p class="navbar-text"><%- req.session.me.firstName %></p>
            <a href = "/logout">
              <button type="button" class="btn btn-success navbar-btn"><%- Helper.translate(req, 'ejs-layout-btn-logout') %></button>
            </a>
          <% } else { %>
            <a href = "/login">
              <button type="button" class="btn btn-success navbar-btn"><%- Helper.translate(req, 'ejs-layout-btn-login') %></button>
            </a>
            <a href = "/signup">
              <button type="button" class="btn btn-success navbar-btn"><%- Helper.translate(req, 'ejs-layout-btn-signup') %></button>
            </a>
          <% } %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class = "row">
        <div class="col-md-12">
          <div class="alerts">
            <div id="error-message-div" class="alert alert-danger hidden" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label=<%- Helper.translate(req, 'ejs-layout-alert-close') %>><span aria-hidden="true">&times;</span></button>
              <h4>Ошибка:</h4>
              <h5 id="error-message"></h5>
            </div>
            <div id="success-message-div" class="alert alert-success hidden" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label=<%- Helper.translate(req, 'ejs-layout-alert-close') %>><span aria-hidden="true">&times;</span></button>
              <h4>Успешно:</h4>
              <h5 id="success-message"></h5>
            </div>
          </div>
        </div>
      </div>
      <%- body %>

      <!--TEMPLATES-->
      
      <!--TEMPLATES END-->

    </div>
  </body>
</html>
